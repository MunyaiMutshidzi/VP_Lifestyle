@model Product
@{
    Layout ="~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = ViewBag.Action;
}

<div class="container-xxl py-5 bg-dark hero-header mb-5">
    <div class="container text-center my-5 pt-5 pb-4">
        <h1 class="display-3 text-white mb-3 animated slideInDown">About Us</h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb justify-content-center text-uppercase">
                <li class="breadcrumb-item"><a href="#">Home</a></li>
                <li class="breadcrumb-item"><a href="#">Pages</a></li>
                <li class="breadcrumb-item text-white active" aria-current="page">About</li>
            </ol>
        </nav>
    </div>
</div>

<div class="d-flex justify-content-center align-items-center bg-dark vh-100">
    <div class="col-md-6 p-5 bg-dark rounded shadow-lg wow fadeInUp" data-wow-delay="0.2s">
        <h1 class="text-white mb-4">@ViewBag.Action Online</h1>
        <form asp-controller="AdminProduct" asp-action="ManageProduct" method="post">
            @* Validate all the input fields automatically *@
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="ProductID" />
            @* During form submission, the value of ProductID will be sent to the server along with other form data *@
            <div class="row g-3">
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="ProductName" type="text" class="form-control" placeholder="Product Name">
                        <label asp-for="ProductName" class="form-label"></label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Price" class="form-control">
                        <label asp-for="Price" class="form-label"></label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="ProductCode" class="form-control" placeholder="Product Code">
                        <label asp-for="ProductCode"  class="form-label"></label>
                    </div>
                </div>
                @* Adding a dropdown list *@
                <div class="col-md-6">
                    <div class="form-floating">
                        <select asp-for="CategoryID"
                                asp-items="@(new SelectList(ViewBag.Categories, "CategoryID", "CategoryName", Model.CategoryID.ToString()))"
                                class="form-select">
                        </select>
                        <label asp-for="CategoryID" class="form-label">Category</label>
                    </div>
                </div>
                @* Adding a textarea *@
                <div class="col-12">
                    <div class="form-floating">
                        <textarea asp-for="ProductDescription" class="form-control" placeholder="Enter Product Description"
                                  style="height: 100px"></textarea>
                        <label asp-for="ProductDescription" class="form-label">Product Description</label>
                    </div>
                </div>
                <div class="col-12">
                    @* Always send the button type to submit, for the data to be sent to the server *@
                    <button type="submit" class="btn btn-primary w-100 py-3">@ViewBag.Action</button>
                    <a class="btn btn-secondary w-100 py-3 mt-2" asp-controller="AdminProduct" asp-action="Product">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>
